{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@chatbot/bot": ["../../bot/src"],
            "@chatbot/plugins": ["../../plugins/src"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
